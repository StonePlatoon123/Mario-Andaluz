{
  "name": "mario-andaluz-bot",
  "version": "1.0.0",
  "description": "Bot de Discord súper completo que habla andaluz EPA con transcripción automática",
  "main": "index.js",
  "scripts": {
    "start": "node setup.js && node index.js",
    "dev": "nodemon index.js",
    "setup": "node setup.js",
    "deploy": "node deploy-commands.js",
    "install-deps": "npm install",
    "auto-start": "npm run install-deps && npm run setup && npm run deploy && npm start"
